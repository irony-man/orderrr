{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": false,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module",
    "ecmaVersion": 8,
    "requireConfigFile": false,
    "allowImportExportEverywhere": true
  },
  "plugins": ["react", "react-hooks"],
  "globals": {
    "System": false,
    "breakpoint": false,
    "__WSHOST__": false
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "^e$|selectize"
      }
    ],
    "indent": ["warn", 2],
    "semi": ["warn", "always"]
  }
}
